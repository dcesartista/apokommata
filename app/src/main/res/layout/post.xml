<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/postpic"
        android:src="@drawable/postpic"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/postname"
        android:background="@drawable/squareblack"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:text="Sepatu Bola"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3D 21H"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="340dp"
        android:textSize="18sp"
        android:layout_marginTop="215dp"/>
    <ImageView
        android:id="@+id/button_next"
        android:src="@drawable/arrow_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="362dp"
        android:layout_marginTop="230dp"
        />
    <ImageView
        android:id="@+id/button_prev"
        android:src="@drawable/arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        />
    <ImageView
        android:id="@+id/pp_kecil"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/circle_black"
        android android:padding="8dp"/>
    <TextView
        android:id="@+id/categories"
        android:text="Sportswear"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="245dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raditya Kurniawan"
        android:textSize="26sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="120dp"
        />
    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yogyakarta"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="120dp"
        />
    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        android:background="#E0E0E0">
        <TextView
            android:id="@+id/stuff_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin dui leo, volutpat ut lobortis quis, hendrerit a tellus. Duis urna ipsum, imperdiet non ex quis, placerat molestie velit. Maecenas vel justo ac diam cursus laoreet. Integer euismod congue rutrum. Sed tempus mattis felis id facilisis. Ut vehicula id massa quis congue. Sed vitae porttitor lorem. Proin pellentesque sapien sed ante mattis, non suscipit augue placerat. Mauris hendrerit efficitur tempus. Aliquam at eleifend massa, sed laoreet felis. Etiam suscipit posuere massa ut malesuada. Vivamus facilisis quam ac lacus pellentesque accumsan. In pretium nisi erat, vel gravida nunc mollis eget. Aliquam velit nisi, euismod id orci a, suscipit hendrerit mauris. Vestibulum eleifend sapien eu nibh malesuada condimentum. Integer magna ex, interdum vel congue eu, porta vulputate lorem. Nullam et vehicula odio, quis euismod erat. Suspendisse vel metus massa. Proin pellentesque urna ac eleifend dapibus. Phasellus quis velit turpis. Duis justo libero, euismod ut orci et, mollis condimentum eros."
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#000000"/>
    </ScrollView>
    <TextView
        android:id="@+id/description"
        android:text="Description"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="380dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/interest_button"
        android:background="@drawable/button_interest"
        android:layout_marginTop="610dp"
        android:text="Interest"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</FrameLayout>