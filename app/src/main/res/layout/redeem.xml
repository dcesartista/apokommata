<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:text="Your Karma"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/karma_btn"
        android:src="@drawable/karma_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="84dp"
        android:layout_marginRight="48dp"/>
    <TextView
        android:id="@+id/karma_point"
        android:text="520"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="84dp"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <HorizontalScrollView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="135dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/coupon_1"
                android:src="@drawable/voucher"
                android:background="@drawable/square_blue_rounded"
                android:layout_gravity="center_horizontal"
                android:paddingTop="36dp"
                android:paddingRight="36dp"
                android:paddingLeft="36dp"
                android:paddingBottom="216dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/coupon_name"
                android:layout_marginTop="50dp"
                android:textAlignment="gravity"
                android:layout_gravity="center"
                android:text="Voucher 50%"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </HorizontalScrollView>
</FrameLayout>